<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/showNumber"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_weight="1"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="textPersonName"
        android:paddingRight="10pt"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_weight="0">

            <Button
                android:id="@+id/buClean"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey1"
                android:onClick="buClickClean"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey1"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buPercentage"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey1"
                android:onClick="buPercent"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_weight="1"
                android:background="@color/keysColor3"
                android:onClick="buOpEvent"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_weight="0">

            <Button
                android:id="@+id/bu7"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey2"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey2"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey2"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buMul"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_weight="1"
                android:background="@color/keysColor3"
                android:onClick="buOpEvent"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_weight="0">

            <Button
                android:id="@+id/bu4"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey2"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey2"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey2"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_weight="1"
                android:background="@color/keysColor3"
                android:onClick="buOpEvent"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_weight="0">

            <Button
                android:id="@+id/bu1"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey2"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey2"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/keysGrey2"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buAdd"
                android:layout_width="50pt"
                android:layout_height="70pt"
                android:layout_weight="1"
                android:background="@color/keysColor3"
                android:onClick="buOpEvent"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/bu0"
            android:layout_width="80pt"
            android:layout_height="70pt"
            android:layout_weight="1"
            android:background="@color/keysGrey2"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buDot"
            android:layout_width="40pt"
            android:layout_height="70pt"
            android:layout_weight="1"
            android:background="@color/keysGrey2"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="40pt"
            android:layout_height="70pt"
            android:layout_weight="1"
            android:background="@color/keysColor3"
            android:onClick="buEqualEvent"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>
</LinearLayout>